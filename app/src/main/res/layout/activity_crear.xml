<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Nuevo Reporte"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/btn_tomar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar la Foto"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageView
        android:id="@+id/ima_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="204dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/txted_descripcion_repositorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="385dp" />

    <Button
        android:id="@+id/btn_guardar_reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Reporte"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="510dp" />


</androidx.constraintlayout.widget.ConstraintLayout>